extends layout

block content
	h1= article.title
	h5 Written by #{article.author}
	p= article.body
	hr
	a.btn.btn-default(href='/articles/edit/'+article._id) Edit
	//.delete-article class is used for jQuery to make a delete request
	//data-id=article._id makes id reachable for jQuery from html
	a.btn.btn-danger.delete-article(href='#',data-id=article._id) Delete